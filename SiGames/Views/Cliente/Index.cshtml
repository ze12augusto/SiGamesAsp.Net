@model IEnumerable<SiGames.Models.cliente>

@{
    ViewBag.Title = "Cadastro de Clientes";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Criar novo", "../pessoa/create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pessoa.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pessoa.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "../pessoa/edit", new { id=item.pessoa.IdPessoa }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.pessoa.IdPessoa }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.IdPessoa })
        </td>
    </tr>
}

</table>
